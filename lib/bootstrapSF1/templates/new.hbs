    <div class="col-md-4">
      <div class="card context-account">
        <div class="card-heading">
          ACME Publishing
        </div>
        <ul class="card-detail ">
          <li>Nonprofit Organization</li>
          <li>Santa Barbara, CA</li>
        </ul>
      </div> <!-- end card -->
    </div>

    <!-- Card for Contact -->
    <div class="col-md-4">
      <div class="card context-contact">
        <div class="card-heading">
          Jeffery Fisher
